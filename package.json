{
  "name": "@ianlucas/cs2-inventory-simulator",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "deploy": "npx @ianlucas/deploy@latest",
    "dev": "react-router dev",
    "format": "prettier . --write",
    "localize": "tsx scripts/localize.ts && prettier app/localizations/*.ts --write",
    "postinstall": "if [ \"$NODE_ENV\" != \"production\" ]; then tsx scripts/postinstall.ts; fi",
    "start": "react-router-serve ./build/server/index.js",
    "test": "vitest",
    "typecheck": "react-router typegen && tsc",
    "upgrade": "npx npm-check-updates@latest --target minor -u"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.3",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@ianlucas/cs2-lib": "^5.8.7",
    "@ianlucas/cs2-lib-inspect": "^3.0.0",
    "@ianlucas/remix-auth-steam": "^5.0.1",
    "@prisma/client": "^6.2.1",
    "@react-router/fs-routes": "^7.1.1",
    "@react-router/node": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "@uidotdev/usehooks": "^2.4.1",
    "clsx": "^2.1.1",
    "country-flag-icons": "^1.5.14",
    "dotenv": "^16.4.7",
    "isbot": "^5.1.21",
    "lz-string": "^1.5.0",
    "prisma": "^6.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.1.1",
    "remix-auth": "^4.1.0",
    "remix-utils": "^8.0.0",
    "steamapi": "^3.0.12",
    "tsx": "^4.19.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@react-router/dev": "^7.1.1",
    "@types/node": "^20.17.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "happy-dom": "^16.5.3",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.17",
    "terser": "^5.37.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
